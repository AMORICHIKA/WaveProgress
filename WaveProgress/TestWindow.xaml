<Window x:Class="WaveProgress.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wave="clr-namespace:WaveProgressControl"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800" Background="Bisque">
    <Grid>
        <wave:WaveProgress x:Name="progress"/>
        <Slider x:Name="volume1" Width="200" Minimum="0" Maximum="100" Value="0.0" ValueChanged="volume1_ValueChanged"
                AutoToolTipPlacement="TopLeft" AutoToolTipPrecision="1"/>
    </Grid>
</Window>
